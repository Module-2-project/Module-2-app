<button onclick="history.back()"><img class="arrow-back" src="/images/back-arrow.png" /> Go back</button>
<h2 class="titles">Add recipe</h2>


<form method="POST" action="/recipe/new">
  <label>Dish name:</label>
  <input required="true" type="text" name="name" placeholder="Hummus"/>
  <label>Image URL:</label>
  <input required="true" type="text" name="image"/>
  <label>Time required in minutes:</label>
  <input required="true" type="number" name="time" placeholder="25" />
  <label>Cuisine type:</label>
  <select name="cuisine">
    <option value="Asian">Asian</option>
    <option value="Japanese">Japanese</option>
    <option value="Thai">Thai</option>
    <option value="Italian">Italian</option>
    <option value="Greek">Greek</option>
    <option value="Mexican">Mexican</option>
    <option value="Argentinian">Argentinian</option>
    <option value="Colombian">Colombian</option>
    <option value="South American">South American</option>
    <option value="Ethiopian">Ethiopian</option>
    <option value="Marrocan">Marrocan</option>
    <option value="Spanish">Spanish</option>
    <option value="Portuguese">Portuguese</option>
    <option value="Indian">Indian</option>
    <option value="American">American</option>
    <option value="Other">Other</option>
  </select>
  <label>Kcal:</label>
  <input required="true" type="number" name="kcal" placeholder="450"/>
  <label>Spices:</label>
  <select name="spices">
    <option value="Mild">🔥</option>
    <option value="Medium">🔥🔥</option>
    <option value="Spicy">🔥🔥🔥</option>
    <option value="Very spicy">🐲</option>
  </select>
  <label>Does the recipe contain:</label>
  <div class="recipe-contain">
    <div>
      <label>Lactose:</label>
      <input type="radio" name="lactose" value="true" />Yes
      <input type="radio" name="lactose" value="false" />No
    </div>
    <div>
      <label>Gluten:</label>
      <input type="radio" name="gluten" value="true" />Yes
      <input type="radio" name="gluten" value="false" />No
    </div>
    <div>
      <label>Meat:</label>
      <input type="radio" name="meat" value="true" />Yes
      <input type="radio" name="meat" value="false" />No
    </div>
  </div>
  <label>Select your cooking level:</label>
  <select required="true" name="level">
    <option value="Beginner">Beginner 👶🏻</option>
    <option value="Medium">Medium 👨🏻</option>
    <option value="Experienced">Experienced 🧞‍♂️</option>
    <option value="God">God 👨🏻‍🍳</option>
    <option value="Grandma">Grandma 👵🏻</option>
  </select>
  <label>Number of servings:</label>
  <input required="true" type="number" name="pax" placeholder="4" />
  <label>Ingredients:</label>
  <textarea required="true" name="ingredients" rows="10" columns="50" placeholder="Add all your ingredients separated by a comma: 3 tomatoes, 2 onions, olive oil"></textarea>
  <label>Steps:</label>
  <textarea required="true" name="steps" rows="10" columns="50" placeholder="Add each cooking instruction separated by a dot: Slice the onions. Add 1oz of olive oil in a pan. Throw the onions in the pan"></textarea>
  {{#if error}}
    <p style="color:rgb(218, 90, 90)">{{ error }}</p>
  {{/if}}
  <button type="submit">Add recipe</button>
</form>