<h2>Add recipe</h2>

<form method="POST" action="/recipe/new">
  <label>Dish name:</label>
  <input required="true" type="text" name="name" placeholder="Hummus"/>
  <label>Image URL:</label>
  <input required="true" type="text" name="image"/>
  <label>Time required in minutes:</label>
  <input required="true" type="number" name="time" placeholder="25" />
  <label>Cuisine type:</label>
  <select required="true" name="cuisine">
    <option value="Asian">Asian</option>
    <option value="Japanese">Japanese</option>
    <option value="Thai">Thai</option>
    <option value="Italian">Italian</option>
    <option value="Greek">Greek</option>
    <option value="Mexican">Mexican</option>
    <option value="Argentinian">Argentinian</option>
    <option value="Colombian">Colombian</option>
    <option value="South American">South American</option>
    <option value="Etiopian">Etiopian</option>
    <option value="Marrocan">Marrocan</option>
    <option value="Spanish">Spanish</option>
    <option value="Portuguese">Portuguese</option>
    <option value="Indian">Indian</option>
    <option value="American">American</option>
    <option value="Other">Other</option>
  </select>
  <label>Kcal:</label>
  <input required="true" type="number" name="kcal" placeholder="450"/>
  <label>Spices:</label>
  <select required="true" name="spices">
    <option value="Mild">ğŸ”¥</option>
    <option value="Medium">ğŸ”¥ğŸ”¥</option>
    <option value="Spicy">ğŸ”¥ğŸ”¥ğŸ”¥</option>
    <option value="Very spicy">ğŸ²</option>
  </select>
  <label>Does the recipe contain:</label>
  <div>
    <label>Lactose:</label>
    <select required="true" name="lactose">
      <option value="Yes">Yes</option>
      <option value="No">No</option>
    </select>
  </div>
  <div>
    <label>Gluten:</label>
    <select required="true" name="gluten">
      <option value="Yes">Yes</option>
      <option value="No">No</option>
    </select>
  </div>
  <div>
    <label>Meat or fish:</label>
    <select required="true" name="meat">
      <option value="Yes">Yes</option>
      <option value="No">No</option>
    </select>
  </div>
  <label>Select your cooking level:</label>
  <select required="true" name="level">
    <option value="Beginner">Beginner</option>
    <option value="Medium">Medium</option>
    <option value="Experienced">Experienced</option>
    <option value="God">God</option>
    <option value="Grandma">Grandma</option>
  </select>
  <label>Number of servings:</label>
  <input required="true" type="number" name="pax" placeholder="4" />
  <label>Ingredients:</label>
  <textarea required="true" name="ingredients" rows="10" columns="25" placeholder="Add all your ingredients separated by a comma: tomatoes, onions, olive oil"></textarea>
  <label>Steps:</label>
  <textarea required="true" name="steps" rows="10" columns="25" placeholder="Add each cooking instruction separated by a comma: slice the onions, add 1oz of olive oil in a pan, throw the onions in the pan"></textarea>
  <label>Added by:</label>
  <input value="{{user.username}}" />
  <button type="submit">Add recipe</button>
</form>