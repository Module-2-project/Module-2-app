<button id="back-btn" onclick="history.back()"><img class="arrow-back" src="/images/back-arrow.png" /> Back</button>
<div class="gradient">
  <h2 class="titles">Edit profile</h2>
</div>

<div class="profile-intro">
  <img class="profile-avatar" src="{{user.profilePic}}" alt="Profile avatar" />
</div>
<form method="POST" action="/profile/edit">
  <input required="true" name="username" value="{{user.username}}">
<div class="profile-items"></div>
  <label>First name:</label>
  <input required="true" name="firstName" value="{{user.firstName}}">
</div>
<div class="profile-items"></div>
  <label>Last name:</label>
  <input required="true" name="lastName" value="{{user.lastName}}">
</div>
<div class="profile-items"></div>
  <label>Email:</label>
  <input required="true" name="email" value="{{user.email}}">
</div>
<label>Cooking level:</label>
<select required="true" name="cookingLevel">
  <option value="Beginner" {{#eq user.cookingLevel "Beginner" }}selected{{/eq}}>Beginner 👶🏻</option>
  <option value="Medium" {{#eq user.cookingLevel "Medium" }}selected{{/eq}}>Medium 👨🏻</option>
  <option value="Hard" {{#eq user.cookingLevel "Hard" }}selected{{/eq}}>Experienced 🧞‍♂️</option>
  <option value="God" {{#eq user.cookingLevel "God" }}selected{{/eq}}>God 👨🏻‍🍳</option>
  <option value="Grandma" {{#eq user.cookingLevel "Grandma" }}selected{{/eq}}>Grandma 👵🏻</option>
</select>
{{#if error}}
  <p style="color:rgb(218, 90, 90)">{{ error }}</p>
{{/if}}
<button type="submit"><img class="option-buttons" src="/images/save.png" alt="Save button"> Save changes</button>
<a class="anchors" href="/profile/confirmation"><img class="option-buttons" src="/images/delete.png" alt="Delete button"> Delete account</a>