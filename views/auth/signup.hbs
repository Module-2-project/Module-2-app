<h1>¡Create your account!</h1>


<div id="form">
  <form action="/auth/signup" method="POST">
 
    <label>Username</label>
      <input type="text" name="username" placeholder="JohnD69" />

    <label>First Name</label>
      <input type="text" name="firstName" placeholder="John" />

    <label>Last Name</label>
      <input type="text" name="lastName" placeholder="Smith" />  
 
    <label>Email</label>
      <input type="email" name="email" placeholder="john@smith.com" />

    <label>Cooking Level:</label>
      <select required="true" name="cookingLevel">
    <option value="Beginner">Beginner 👶🏻</option>
    <option value="Medium"> Medium 👨🏻</option>
    <option value="Hard">Experienced 🧞‍♂️</option>
    <option value="God">God 👨🏻‍🍳</option>
    <option value="Grandma">Grandma 👵🏻</option>
  </select>  
    
    <label>Password</label>
      <input type="password" name="password" placeholder="********" />

      {{#if error}}
      <p style="color: red;">{{error}}</p>
      {{/if}}
 
    <button type="submit">Create your account</button>
    <p class="account-message"> Do you already have an account? 
       <a href="/login">Login</a>
       </p>
 
  </form>
</div>



