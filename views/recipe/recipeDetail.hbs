<div class="recipeDetail">
  <h3>{{name}}</h3>
  <p>Cuisine: {{cuisine}}</p>
  <img src={{image}} alt="Dish image" />
  <ul>
    <li>{{time}} min</li>
    <li>Servings: {{pax}}</li>
    <li>Level: {{level}}</li>
    <li>Kcal: {{kcal}}</li>
    <li>Spices: {{spices}}</li>
    <li>Lactose: {{lactose}}</li>
    <li>Gluten: {{gluten}}</li>
    <li>Meat: {{meat}}</li>
  </ul>
  <h4>Ingredients:</h4>
  <p>{{ingredients}}</p>
  <h4>Steps:</h4>
  <ol>{{steps}}</ol>
  <p>Created by: {{username}}</p>
</div>