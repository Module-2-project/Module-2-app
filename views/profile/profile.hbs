<h2>Profile</h2>

<div class="profile-intro">
  <img src="/images/chef-icon.png" alt="Profile avatar" />
  <h3>Hello {{user.firstName}}</h3>
</div>
<a href="/profile/edit">Edit profile</a>
<div class="profile-data">
  <div class="profile-items"></div>
    <h4>Username:</h4>
    <p>{{user.username}}</p>
  </div>
  <div class="profile-items"></div>
    <h4>First name:</h4>
    <p>{{user.firstName}}</p>
  </div>
  <div class="profile-items"></div>
    <h4>Last name:</h4>
    <p>{{user.lastName}}</p>
  </div>
  <div class="profile-items"></div>
    <h4>Email:</h4>
    <p>{{user.email}}</p>
  </div>
  <div class="profile-items"></div>
    <h4>Cooking level:</h4>
    <p>{{user.cookingLevel}}</p>
  </div>
  <div class="profile-items"></div>
    <h4>Password:</h4>
    <p>********</p>
    <a href="/auth/password-reset"><img src="/images/edit-button.png" alt="Edit button" /></a>
  </div>
</div>

<a href="/recipe/my-recipes">My recipes</a>
<a href="/review/my-reviews">My reviews</a>
<a href="/auth/logout">Log out</a>
<a href="/profile/delete">Delete account</a>