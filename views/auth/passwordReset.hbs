<button id="back-btn" onclick="history.back()"><img class="arrow-back" src="/images/back-arrow.png" /> Go back</button>
<h2 class="titles">Password reset</h2>

<div class="profile-intro">
  <img class="profile-avatar" src="{{user.profilePic}}" alt="Profile avatar" />
  <h3>{{user.firstName}}</h3>
</div>
<form method="POST" action="/auth/password-reset">
  <label>Old password:</label>
  <input required="true" type="password" name="oldPassword"/>
  <label>New password:</label>
  <input required="true" type="password" name="newPassword"/>
  <label>Confirm new password:</label>
  <input required="true" type="password" name="confirmPassword"/>
  {{#if error}}
    <p style="color:rgb(218, 90, 90)">{{ error }}</p>
  {{/if}}
  <button type="submit"><img class="option-buttons" src="/images/save.png" alt="Save button"> Save new password</button>
</form>